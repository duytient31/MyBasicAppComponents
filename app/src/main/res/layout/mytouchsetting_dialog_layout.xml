<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="  handle event=check, pass to child=uncheck  " />
        <TextView android:text="SmallView"
                  android:textSize="30dp"
                  android:textColor="#198E31"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/small_dispatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dispatch"
            />
            <CheckBox
                android:id="@+id/small_inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onIntercept"
            />
            <CheckBox
                android:id="@+id/small_ontouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onTouch"
            />
        </LinearLayout>

        <TextView android:text="MiddleView"
                  android:textSize="30dp"
                  android:textColor="#2E1B98"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/middle_dispatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dispatch"
            />
            <CheckBox
                android:id="@+id/middle_inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onIntercept"
                />
            <CheckBox
                android:id="@+id/middle_ontouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onTouch"
                />

        </LinearLayout>

        <TextView android:text="BigView"
                  android:textSize="30dp"
                  android:textColor="#DB3838"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/big_dispatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dispatch"
            />
            <CheckBox
                android:id="@+id/big_inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onIntercept"
            />
            <CheckBox
                android:id="@+id/big_ontouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onTouch"
            />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>