<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt / Decrypt" android:textSize="30sp" android:textStyle="bold" android:textColor="@color/red"/>
        <TextView
            android:id="@+id/tvInputPrompt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Input> Plain Text"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvInputText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="TextView"/>
        <CheckBox
            android:id="@+id/cbEncrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Encrypt Input Plain Text"/>
        <TextView
            android:id="@+id/tvOutputPrompt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Output> Encrypted Text" android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvOutputText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="TextView"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign / Verify" android:textSize="30sp" android:textStyle="bold" android:textColor="@color/red"/>
        <TextView
            android:id="@+id/tvInputPrompt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Input> Plain Text"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvInputText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="TextView"/>
        <CheckBox
            android:id="@+id/cbSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Sign Input Plain Text"/>
        <TextView
            android:id="@+id/tvOutputPrompt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Output> Signed Text" android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvOutputText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="TextView"/>

    </LinearLayout>
</ScrollView>