<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="status_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_textView"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myjavaactivity_progressBar"/>


    <Button
        android:text="cinit,init,static sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_cinit_sequence"
        android:id="@+id/button"/>


    <Button
        android:text="without synchronized(this) keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_NO_synchronized_keyword"
        android:id="@+id/button2"/>


    <Button
        android:text="with synchronized(this) keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_synchronized_keyword"
        android:id="@+id/button3"/>


</LinearLayout>