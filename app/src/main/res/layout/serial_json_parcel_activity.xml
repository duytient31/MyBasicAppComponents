<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
            android:text="status_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status_textView"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myprogressBar"/>

        <Button
            android:text="Compare: Serial Data Object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="70001"
            android:onClick="onClick_MyJavaTests"/>
        <Button
            android:text="Compare: JSON data object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="70002"
            android:onClick="onClick_MyJavaTests"/>
        <Button
            android:text="Compare: Parcel Data Object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="70003"
            android:onClick="onClick_MyJavaTests"/>
        <Button
            android:text="JSON Data Object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="70012"
            android:onClick="onClick_MyJavaTests"/>
    </LinearLayout>
</ScrollView>
