<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/app_icon" android:layout_width="32dp" android:layout_height="32dp" android:contentDescription="@string/app_name" />
    <TextView  android:id="@+id/app_name" android:textSize="18sp" android:gravity="left" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="32dp" />
</LinearLayout>
