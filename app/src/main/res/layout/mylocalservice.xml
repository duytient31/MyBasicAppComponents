<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myainactivity_progressBar"/>

    <TextView
        android:text="OutputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OutputTextView"/>

    <ToggleButton
        android:text="LocalForegroundServiceToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="STOP LocalForegroundService"
        android:textOn="Start LocalForegroundService"
        android:id="@+id/LocalForegroundServiceToggleBtn"/>
    <ToggleButton
        android:text="LocalServiceToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="STOP LocalService"
        android:textOn="Start LocalService"
        android:id="@+id/LocalServiceToggleBtn"/>
    <ToggleButton
        android:text="BindServiceToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="STOP BindService"
        android:textOn="Start BindService"
        android:id="@+id/BindServiceToggleBtn"/>


    <Button
        android:text="getBindServiceResultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getBindServiceResultBtn"/>

</LinearLayout>