<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTransparentTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ExoPlayerTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- DisplayBitmaps Sample -->
    <!-- Dynamic style change is not currently supported by Android. You must set the style before the view is create (in xml). -->
    <style name="BitmapsThemeDark" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/TranslucentDarkActionBar</item>
    </style>

    <style name="BitmapsThemeDark.FullScreen" />

    <style name="TranslucentDarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#99000000</item>
    </style>

    <!--<style name="PhotoGridLayout">-->
    <!--<item name="android:drawSelectorOnTop">true</item>-->
    <!--</style>-->
    <!-- Base application theme. -->
    <style name="MyToolBarStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="DictTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Style defined for Global -->
    <color name="custom_theme_color">#b0b0ff</color>

    <!-- Custom Style defined for Theme. -->
    <style name="MyThemeStyle" parent="AppTheme">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">30sp</item>
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>

    <!-- Custom Style defined for Button -->
    <style name="CustomButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:colorBackground">@color/yellow</item>
    </style>

    <!-- Custom Style defined for EditBox -->
    <style name="Numbers">
        <item name="android:inputType">number</item>
    </style>

    <!-- Custom Style defined for CustomView -->
    <declare-styleable name="MyTimeView">
        <attr name="timeText" format="string" />
        <attr name="timeColor" format="boolean"/>
    </declare-styleable>

</resources>
