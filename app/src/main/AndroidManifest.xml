<?xml version="1.0" encoding="utf-8"?>
<manifest package="sample.hawk.com.mybasicappcomponents"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- For ContenProvider to get contact data -->
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MyActivity">

        </activity>

        <service android:name=".MyService">

        </service>

        <!-- Statically register MyReceiver  -->
        <receiver android:name=".MyReceiver">
            <intent-filter>
                <action android:name="sample.hawk.com.mybasicappcomponents.broadcast1"/>
            </intent-filter>
            <intent-filter>
                <action android:name="sample.hawk.com.mybasicappcomponents.broadcast2"/>
            </intent-filter>
        </receiver>

        <provider
            android:authorities="sample.hawk.com.mybasicappcomponents"
            android:name=".MyContentProvider">

        </provider>
    </application>

</manifest>